package Assignment3;

import java.util.Random;

public class Ex1 {
	public static void main(String[] args){
		
//Q1
		float a = 5240.5f;
		float b = 10970.055f;
		
		int c = (int)a;
		int d = (int)b;
		System.out.println("Lương Account 1 làm tròn: " + c + "$");
		System.out.println("Lương Account 2 làm tròn: " + d+ "$");
		
//Q2
		Random rd = new Random();
		int random = rd.nextInt(100000);
		String test = String.valueOf(random);
		String so0 = "00000";
		StringBuilder sb = new StringBuilder("00000");
		for (int i = test.length()- 1; i > 0; i--) {
			sb.replace(test.length()-1, test.length()-1, test);
			System.out.println(sb);
		}

		
	}
}
