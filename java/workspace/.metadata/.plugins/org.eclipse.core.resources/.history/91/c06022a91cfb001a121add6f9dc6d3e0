package Question1_2.copy2;

import java.util.Scanner;


public class CanBo {
	private String name;
	private short age;
	private Gender gioiTinh;
	private String diaChi;
	
	public String getName() {
		return name;
	}
	public short getAge() {
		return age;
	}
	public Gender getGioiTinh() {
		return gioiTinh;
	}
	public void setGioiTinh(byte gioiTinh) {
		if (gioiTinh == 0) {
			this.gioiTinh = Gender.MALE;
		} else if (gioiTinh == 1) {
			this.gioiTinh = Gender.FEMALE;
		} else {
			this.gioiTinh = Gender.UNKNOWN;
		}
	}
	public String getDiaChi() {
		return diaChi;
	}
	
	public void input(){
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Nháº­p tÃªn: ");
		name = sc.nextLine();
		System.out.println("Nháº­p tuá»•i: ");
		age = sc.nextShort();
		System.out.println("Nháº­p giá»›i tÃ­nh: (0: Male, 1: Female)");
		setGioiTinh(sc.nextByte());
		System.out.println("Nháº­p Ä‘á»‹a chá»‰: ");
		diaChi = sc.nextLine();
		sc.nextLine();
		
	}
	
	public void info(){
		System.out.println("TÃªn cÃ¡n bá»™: " + name);
		System.out.println("Tuá»•i: "+ age);
		System.out.println("Giá»›i tÃ­nh: "+gioiTinh);
		System.out.println("Ä?á»‹a chá»‰: "+ diaChi);
	}
	
	public boolean check(String otherName){
		if(name.equals(otherName))
			return true;
		else
			return false;
	}

}
